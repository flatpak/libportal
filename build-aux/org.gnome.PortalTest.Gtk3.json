{
    "app-id": "org.gnome.PortalTest.Gtk3",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "portal-test-gtk3",
    "finish-args": [
        "--socket=wayland",
        "--socket=x11",
        "--socket=pulseaudio"
    ],
    "modules": [
        {
            "name": "gtk3",
            "disabled": true,
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Dgtk_doc=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/gtk.git",
                    "branch": "gtk-3-24"
                }
            ]
        },
        {
            "name": "portal-test-gtk3",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
              "-Dbackend-gtk3=enabled",
              "-Dbackend-gtk4=disabled",
              "-Dbackend-qt5=disabled",
              "-Dbackend-qt6=disabled",
              "-Dportal-tests=true",
              "-Ddocs=false"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}
