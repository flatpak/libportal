{
    "app-id": "org.gnome.PortalTest.Qt",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "portal-test-qt",
    "finish-args": [
        "--socket=wayland",
        "--socket=x11",
        "--socket=pulseaudio"
    ],
    "modules": [
        {
            "name": "portal-test-qt",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
              "-Dbackend-qt5=enabled",
              "-Dportal-tests=true",
              "-Dintrospection=false",
              "-Dvapi=false",
              "-Ddocs=false"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}
